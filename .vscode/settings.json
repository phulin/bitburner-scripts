{
  // Linter Settings
  "typescript.validate.enable": true,
  "javascript.validate.enable": false,
  "eslint.validate": ["typescript", "typescriptreact"],
  "eslint.workingDirectories": ["./src"],

  // Use Non-relative imports so the game can find files in its fake directory structure
  "javascript.preferences.importModuleSpecifier": "non-relative",
  "typescript.preferences.importModuleSpecifier": "non-relative",

  // Bitburner Extension Settings
  "bitburner.scriptRoot": "./dist/",
  "bitburner.fileWatcher.enable": true,
  "bitburner.authToken": "V2ad/+WmhAnIPNiKV5nL+rJ8qLTrUU7GNLdHyNjauoolS2HspboAEQZ7awMPD8ME",
  "bitburner.showFileWatcherEnabledNotification": true,
  "bitburner.showPushSuccessNotification": false,

  // Autosave Settings
  "files.autoSave": "onFocusChange",

  // Autosnippet settings
  "autoSnippet.snippets": [
    {
      "pattern": "**/*.ts",
      "snippet": "ns-template"
    }
  ],

  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.addMissingImports": true
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.tabSize": 2
}
